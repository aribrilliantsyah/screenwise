// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// =================================
// User and Authentication
// =================================
model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  name         String?
  photo        String?  // URL atau path ke foto profil
  address      String?
  university   String?
  gender       String?  // Laki-laki, Perempuan
  whatsapp     String?
  phone        String?
  isAdmin      Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  attempts QuizAttempt[]
}

// =================================
// Quiz Content
// =================================
model Quiz {
  id               Int      @id @default(autoincrement())
  slug             String   @unique
  title            String
  description      String
  passingScore     Int      @default(70) // Skor minimal untuk lulus (persentase)
  timeLimitSeconds Int      @default(1800) // Batas waktu dalam detik
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  questions Question[]
  attempts  QuizAttempt[]
}

model Question {
  id            Int    @id @default(autoincrement())
  questionText  String
  options       String // JSON stringified array of options
  correctAnswer String
  quizId        Int
  quiz          Quiz   @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@unique([quizId, questionText])
}


// =================================
// User Progress
// =================================
model QuizAttempt {
  id          Int      @id @default(autoincrement())
  userId      Int
  quizId      Int
  score       Float
  passed      Boolean
  answers     String   // JSON stringified object of answers
  submittedAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  quiz Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@unique([userId, quizId])
}
